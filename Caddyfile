:8080 {
    encode gzip


    # Route /gpt/* to gpt-load
    handle_path /gpt/* {
       # rewrite * /{http.matchers.path.relative}  # strip /gpt prefix
        reverse_proxy localhost:3011
    }

    
    handle_path /* {
        # rewrite * /{http.matchers.path.relative}  # strip /lobe prefix
        reverse_proxy localhost:3000
    }


    # Default: 404
    respond "Not Found" 404
}
